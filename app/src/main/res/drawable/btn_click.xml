<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#24D6B1" />
            <gradient android:startColor="#2DE2BC"
                android:endColor="#339791"/>
            <corners android:radius="3dp" />
        </shape>
    </item>
    <item >
        <shape>
            <stroke android:width="1dp" android:color="#FAFAFA" />
            <gradient android:startColor="#339791"
                android:endColor="#2DE2BC"/>
            <corners android:radius="3dp" />
        </shape>
    </item>
</selector>